---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'S.H. Contacto',
  description: 'Contacta a Steffi Haberstock para una consulta gratuita.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero>
    <Fragment slot="title">
      Contacta a <span class="text-accent dark:text-white highlight">Steffi</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        ¿Listo para el cambio? Transformemos juntos tus desafíos de liderazgo en oportunidades de crecimiento.
      </span>
      Contáctanos para una consulta inicial gratuita.
    </Fragment>
  </Hero>

  <!-- Features2 Widget ************** -->

  <Features2
    title="Formas de contacto"
    subtitle="Estamos aquí para ayudarte:"
    items={[
      {
        title: 'Consulta por email',
        description: 'Envíanos un email para una consulta inicial gratuita.',
        icon: 'tabler:mail',
      },
      {
        title: 'Conversaciones personales',
        description: 'Programa una conversación personal o videoconferencia.',
        icon: 'tabler:phone',
      },
      {
        title: 'Talleres y seminarios',
        description: 'Infórmate sobre nuestros talleres y seminarios actuales.',
        icon: 'tabler:presentation',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Enviar email',
        href: 'mailto:haberstock.stefanie@gmail.com',
      },
    ]}
  >
    <Fragment slot="title">¿Listo para el siguiente paso?</Fragment>

    <Fragment slot="subtitle">
      Alcancemos juntos tus objetivos. ¡Contáctanos hoy mismo!
    </Fragment>
  </CallToAction>
</Layout>